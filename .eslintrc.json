{
    "env": {
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 2],
        "linebreak-style": ["off", "windows"],
        "quotes": ["warn", "single"],
        "semi": "off",
        "no-console": "off",
        "no-undef": "error",
        "no-multiple-empty-lines": [0, {"max": 4}],
        "no-mixed-spaces-and-tabs": [0]
    }
}
